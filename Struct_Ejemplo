#include <iostream>
#include <conio.h>

using namespace std;

//creacion del struct
struct Estudiante
{
  int cod;
  char nombre[10];
}  estu_1;

int main()
{
    //Capturar datos
    cout<<"Ingrese el codigo: ";
    cin>>estu_1.cod;
    cout<<"\nIngrese el nombre del estudiante: ";
    cin.estu_1.nombre;

    //Salida de datos
    cout<<"Codigo: "<<estu_1.cod<<endl;
    cout<<"Nombre: "<<estu_1.nombre<<endl;
    
    getch;
    return 0;
}
